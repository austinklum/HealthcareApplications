@model HealthcareApplications.Models.PrescriptionDrug

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prescription Drug</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrescriptionId" class="control-label"></label>
                <input asp-for="PrescriptionId" class="form-control" />
                <span asp-validation-for="PrescriptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DrugId" class="control-label"></label>
                <input asp-for="DrugId" class="form-control" />
                <span asp-validation-for="DrugId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosage" class="control-label"></label>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefillCount" class="control-label"></label>
                <input asp-for="RefillCount" class="form-control" />
                <span asp-validation-for="RefillCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Prescriptions" asp-action="Details" asp-route-id="@Model.PrescriptionId">Back to Prescription</a>
</div>

